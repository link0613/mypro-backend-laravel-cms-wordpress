{% extends 'base.html.twig' %}

{% block sub_title %}Add/Edit testimonial{% endblock %}
{% block sub_small_title %}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('list_testimonials') }}"><i class="fa fa-list"></i> Testimonials</a></li>
    <li class="active"><i class="fa fa-file"></i> Testimonial</li>
{% endblock %}

{% block content %}
    <div class="row custom-content">
        <div class="col-md-12">
            <div class="box box-primary">
                {{ form_start(form) }}
                <div class="box-body">
                    {% if testimonial.avatarName is not null %}
                    <div class="col-sm-12">
                        <label for="avatar">Avatar</label>
                        <div id="avatar">
                        <img src="{{ asset('uploads/avatars/' ~ testimonial.avatarName) }}" style="height: 120px;">
                        </div>
                    </div>
                    {% endif %}
                    <div class="form-group">
                        <div class="col-sm-12">{{ form_row(form.service, {'label': 'Help with'}) }}</div>
                        <div class="col-sm-12">
                            {{ form_widget(form.onHomepage) }}
                            {{ form_label(form.onHomepage) }}
                        </div>
                        <div class="col-sm-12">{{ form_row(form.name) }}</div>
                        <div class="col-sm-12">{{ form_row(form.email) }}</div>
                        <div class="col-sm-12">{{ form_row(form.title) }}</div>
                        <div class="col-sm-12">{{ form_row(form.age) }}</div>
                        <div class="col-sm-12">{{ form_row(form.detail) }}</div>
                        <div class="col-sm-12">{{ form_row(form.rating) }}</div>
                        <div class="col-sm-12">{{ form_row(form.industry) }}</div>
                        <div class="col-sm-12">{{ form_row(form.avatar) }}</div>
                        <div class="col-sm-12">{{ form_row(form.date) }}</div>
                    </div>
                </div>
                <div class="box-footer">
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
