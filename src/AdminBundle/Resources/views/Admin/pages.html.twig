{% extends 'base.html.twig' %}

{% block sub_title %}Pages{% endblock %}
{% block sub_small_title %}List of all pages{% endblock %}

{% block breadcrumb %}
    <li class="active"><i class="fa fa-file"></i> Page</li>
{% endblock %}

{% block content %}
    <div class="row custom-content">
        <div class="col-md-12">
        <div class="box">
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td><a href="{{ path('edit_page', {'page': page.id}) }}">{{ page.title }}</a></td>
                        <td>{{ page.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    </div>
{% endblock %}