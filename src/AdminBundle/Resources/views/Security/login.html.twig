{% extends "::base.html.twig" %}

{% block stylesheets %}
    <!-- iCheck -->
    <link rel="stylesheet" href="{{ asset('bundles/admin/plugins/iCheck/square/blue.css') }}">
{% endblock %}

{% block body %}
<body class="hold-transition login-page">
<div class="login-box">
    <!-- /.login-logo -->
    <div class="login-box-body">
        <div class="login-logo">
            <a href="/"><b>Find My Profession</b></a>
        </div>
        <p class="login-box-msg">Sign in to start your session</p>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Username" name="_username" required="required">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password" name="_password" required="required">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" checked />
                        <label class="checkbox-label" for="remember_me">Remember me</label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        {#<a href="{{ path('admin_forgot_password') }}">I forgot my password</a><br>#}
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
{% endblock %}
{% block javascripts %}
<script src="{{ asset('bundles/admin/plugins/iCheck/icheck.min.js') }}"></script>
<script>
    $(function () {
      var offset = -(new Date().getTimezoneOffset() / 60);
      if (offset > 0) {
        offset = '+' + offset
      }
      var timezone = encodeURIComponent("GMT" + offset)
      var action = $("form").attr('action') + "?timezone=" + timezone
      $("form").attr('action', action)
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
{% endblock %}
